head
  meta(charset='utf-8')
  title RAZAS
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
  body
    .modal-dialog
        .modal-content
          // Modal Header
          .modal-header
            button.close(type="button", data-dismiss="modal")
              span(aria-hidden="true") Ã—
              span.sr-only Close
            h4#myModalLabel.modal-title
              | ACTUALIZAR RAZA
          // Modal Body
          .modal-body
            table
              tr
                th ID
                th Animal
                th Raza
                th Descripcion
              each val in rows 
                tr
                  td= val.tyid
                  td= val.ttype
                  td= val.breed
                  td= val.type_description
            form(role='form' method='POST' action='http://localhost:3000/ptype/actualizar')
              div.form-group
                label(for='tyid') ID :
                input#name.form-control(type='text', placeholder='1' name='tyid')
              div.form-group
                label(for='ttype') Animal:
                input#name.form-control(type='text', placeholder='Gato' name='ttype')
              div.form-group
                label(for='breed') Raza:
                input#name.form-control(type='text', placeholder='Persa' name='breed')
              div.form-group
                label(for='type_description') Descripcion:
                input#name.form-control(type='text', placeholder='Felino de las tierras Persas' name='type_description')
              button.btn.btn-primary(type="submit", name="submit") ACTUALIZAR
            
          // Modal Footer
          .modal-footer
